@model IEnumerable<WazefaOn.Models.Category>

@{
    ViewBag.Title = "قائمة أنواع الوظائف";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:right">قائمة أنواع الوظائف</h2>

<p style="text-align:right">
    @Html.ActionLink("انشاء نوع جديد", "Create")
</p>
<` class="table" >
    <tr>
        <th></th>
        <th></th>

        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("تعديل ", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("تفاصيل ", "Details", new { id = item.Id }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryDescription)
        </td>s
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>


    </tr>
}

</`>
