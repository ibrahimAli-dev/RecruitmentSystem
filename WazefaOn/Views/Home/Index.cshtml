@model IEnumerable<WazefaOn.Models.Category>


@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h3>Welcome to the best recruitment Site</h3>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">For Details &raquo;</a></p>
</div>

@foreach (var item in Model)
{
    <div class="panel panel-default" style="padding:15px;">
        <h2 class="panel-heading">@Html.DisplayFor(modelItem => item.CategoryName)</h2>
        <h3>@Html.DisplayFor(modelItem => item.CategoryDescription)</h3>

        <div class="row">

            @foreach (var subItem in item.Jobs)
            {
                <div class="col-md-3 thumbnail" style="margin-left:20px" ;margin-bottom:30px;height:380px;">
                    <h3>@Html.DisplayFor(modelItem => subItem.JobTitle)</h3>
                    <h5>@Html.DisplayFor(modelItem => subItem.jobContent)</h5>
                    @Html.ActionLink("Details", "Details", new { jobId = subItem.Id }, new {@class="btn btn-primary"})
                </div>
            }
        </div>
    </div>
}